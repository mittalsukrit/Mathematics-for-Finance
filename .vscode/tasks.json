{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Current Markdown to HTML",
            "type": "shell",
            "command": "pandoc",
            "args": [
                "${file}",
                "-f",
                "markdown+raw_html",
                "-s",
                "--mathjax",
                "-c",
                "lecture-theme.css",
                "--metadata",
                "title=",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.html"
            ],
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}